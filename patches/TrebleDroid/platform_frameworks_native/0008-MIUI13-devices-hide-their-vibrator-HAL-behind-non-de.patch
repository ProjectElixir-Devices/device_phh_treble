+        ALOGV("Successfully connected to Xiaomi Vibrator HAL AIDL service.");
+        return std::make_shared<AidlHalWrapper>(std::move(scheduler), aidlHal);
+    }
+
     sp<V1_0::IVibrator> halV1_0 = V1_0::IVibrator::getService();
